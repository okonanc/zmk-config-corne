/**
 *  HD2 Layer
 */

/ {
    #define STRATA  &kp LCTRL
    #define UP      &kp W
    #define DOWN    &kp S
    #define LEFT    &kp A
    #define RIGHT   &kp D

    macros {
        resupply: resupply {
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                bindings = <&macro_tap STRATAS DOWN DOWN UP LEFT>;
        };
    };
};



